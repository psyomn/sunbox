<table>
  <tr>
    <th></th> 
    <th>Name</th>
    <th>Bio</th>
  </tr>

<% @users.each do |user| %>

<% if user.name %> 
  <tr>
    <td><%= gravatar_image_tag(user.email, :alt => user.name) %></td>
    <td><%= link_to user.name, user %></td>
    <td><%= user.bio %></td>
  </tr>
<% end %> 

<% end %>
</table>
