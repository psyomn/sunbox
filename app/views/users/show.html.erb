<div> 
  <table>
  <tr><td class="avatarspace">
    <%= gravatar_image_tag(@user.email, :alt => @user.name, :gravatar => { :size => 120 }) %> <br/>
    <% if current_user != @user %> 
      <%= link_to "Send Message", new_message_path(:to_user => @user.name) %> 
    <% end %> 
    </td>

    <td class="userspace">
    <h1><%= @user.name %></h1>
    
    <p class="bio">
      <b>Bio:</b>
      <%= @user.bio || "None provided." %>
    </p>
    
    
    <%= link_to 'Edit My Profile', edit_user_path(@user) %> 
    
</td>
</table>
</div> 
